# Frontend Environment Configuration
# Copy this file to .env and configure with your actual values

# Backend API Configuration
# Point to your backend API server
# For development (default):
REACT_APP_API_URL=http://localhost:5001/api
# For production:
# REACT_APP_API_URL=https://your-backend-domain.com/api

# Google OAuth Configuration (Optional)
# Must match the client ID configured in backend
# Get from: https://console.developers.google.com/
# Leave empty to disable Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id-here

# Facebook OAuth Configuration (Optional)
# Must match the app ID configured in backend
# Get from: https://developers.facebook.com/
# Leave empty to disable Facebook OAuth
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id-here

# Application Configuration
# App name and branding
REACT_APP_NAME=Astronacci Social Media Platform
REACT_APP_VERSION=1.0.0

# Features Flags (Optional)
# Enable/disable features during development
REACT_APP_ENABLE_GOOGLE_AUTH=true
REACT_APP_ENABLE_FACEBOOK_AUTH=false
REACT_APP_DEBUG_MODE=false