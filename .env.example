# Environment Configuration
NODE_ENV=development

# Server
PORT=5001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# MongoDB
# For development with Docker: mongodb://admin:password@localhost:27017/social-media-platform?authSource=admin
# For production: mongodb://username:password@your-mongodb-host:27017/your-database?authSource=admin
MONGODB_URI=mongodb://admin:password@localhost:27017/social-media-platform?authSource=admin

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-here-please-change-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
# IMPORTANT: Change this secret in production!
SESSION_SECRET=your-super-secret-session-key-here-please-change-in-production

# Google OAuth (Optional - leave empty to disable)
# Get credentials from: https://console.developers.google.com/
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional - leave empty to disable)
# Get credentials from: https://developers.facebook.com/
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration (Optional - for future use)
# Configure SMTP settings for email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload Configuration (Optional - for future use)
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (Optional - for caching)
# For development with Docker: redis://localhost:6379
# For production: redis://username:password@your-redis-host:6379
REDIS_URL=redis://localhost:6379

# Admin Registration Secret
# Used to create admin accounts securely
ADMIN_REGISTRATION_SECRET=admin
